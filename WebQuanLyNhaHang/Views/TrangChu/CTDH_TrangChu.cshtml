@{
    Layout = "HeaderFooter_TrangChu";
}
@model WebQuanLyNhaHang.Models.Product // Đón class ViewModel đển nhận dữ liệu sử lý
<style>
    .quantity-control {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .quantity-control button {
            width: 40px;
            height: 40px;
            border: none;
            background-color: #fa8c16;
            color: #fff;
            font-size: 24px;
            font-weight: bold;
            border-radius: 8px;
            display: flex;
            justify-content: center;
            align-items:center;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .quantity-control button:hover {
                background-color: #e07a0e;
            }

        .quantity-control input[type="number"] {
            width: 70px;
            height: 40px;
            text-align: center;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            outline: none;
        }

            .quantity-control input[type="number"]::-webkit-outer-spin-button,
            .quantity-control input[type="number"]::-webkit-inner-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

    .parent_note {
        display: flex;
        align-items: center;
        background-color: #f5f5f5;
        padding: 10px;
        border-radius: 10px;
        width: 500px;
        margin: 10px 0;
    }

    .note_icon {
        width: 24px;
        height: 24px;
        margin-right: 10px;
    }

    .input__decreption textarea {
        border: none;
        outline: none;
        width: 100%;
        font-size: 16px;
        background-color: transparent;
        resize: none;
        color: #555;
    }

    .input__decreption {
        width: 100%;
    }
</style>
<main>
    <section class="detail-product my-4">
        <div class="container">

            <div class="row">
                <div class="col-lg-6">
                    <div>
                        <div class="shadow-sm rounded-3">
                            <img src="@Model.PathPhoto" class="d-block w-100 rounded-3" @* Ảnh sp *@
                                 alt="Banner 1">
                        </div>
                    </div>
                 </div> @* ảnh *@

                <div class="col-lg-6">
                    <form asp-controller="TrangChu" asp-action="Add_CTDH_DonHang" method="post">
                        <input type="number" hidden name="productId" value="@Model.ProductId" />  @* MÃ SẢN PHẨM *@
                        <h3>@Model.TenSanPham</h3>
                        <h3 class="text-danger"> @String.Format("{0:N0}", Model.GiaTien)đ</h3>
                        <hr>
                        <div class="d-flex flex-wrap gap-2">
                            <h4 class="related_product_title">Mô tả sản phẩm</h4>
                            <p>
                                @Model.MoTa
                            </p>
                            <div class="note-section">
                                <div class="parent_note">
                                    <img src="/asset/img/imgWeb/note.svg" alt="note_icon" class="note_icon">
                                    <label class="input__decreption">
                                        <textarea name="ghichu" placeholder="Do you have a message for the restaurant?"></textarea> @* GhiChu *@
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="session-total" style="display: flex; align-items: center;">
                            <div style="width: 75px;min-width: 76px;">
                                Số Lượng
                            </div>
                            <div class="d-flex flex-wrap gap-2">
                                <div class="form-check">
                                    <div class="quantity-control">
                                        <input type="number" id="quantity" name="soluong" value="1" min="1" /> @* soluong *@
                                    </div>
                                </div>
                            </div>
                        </div>



                        <button type="submit" class="btn btn-warning w-100 mt-4 d-flex align-items-center justify-content-center"
                           target="_blank" title="Đặt hàng tận nơi">
                            Thêm Vào Giỏ Hàng
                        </button>
                    </form>
                </div>
            </div>

            <div class="mt-4">
                <!-- Related Products Section -->
                <h4>Sản phẩm liên quan</h4>
                <div class="row g-4">
                    @await Component.InvokeAsync("ProductLienQuan", new { CateID = Model.CateId })
                </div>
            </div>
        </div>
    </section>
</main>


