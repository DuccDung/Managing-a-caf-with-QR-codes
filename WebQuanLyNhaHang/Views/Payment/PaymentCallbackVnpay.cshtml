@model WebQuanLyNhaHang.Models.Vnpay.PaymentResponseModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .payment-summary {
            margin-top: 30px;
        }

        .table th {
            width: 200px;
            font-weight: bold;
        }

        .btn {
            width: 100%;
            margin-top: 20px;
        }

        .alert {
            margin-top: 20px;
        }

        .payment-summary .table td {
            padding: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Thông Tin Chuyển Khoản</h2>

        <div class="payment-summary">
            <h3>Thông tin thanh toán</h3>
            <table class="table table-bordered">
                <tr>
                    <th>Mô tả đơn hàng</th>
                    <td>Số Bàn @Model.OrderDescription Thanh Toán</td>
                </tr>
                <tr>
                    <th>ID Giao dịch</th>
                    <td>@Model.TransactionId</td>
                </tr>
                <tr>
                    <th>ID Đơn hàng</th>
                    <td>@Model.OrderId</td>
                </tr>
                <tr>
                    <th>Phương thức thanh toán</th>
                    <td>@Model.PaymentMethod</td>
                </tr>
                <tr>
                    <th>Trạng thái thanh toán</th>
                    <td>@(Model.Success ? "Thanh toán thành công" : "Thanh toán thất bại")</td>
                </tr>
                <tr>
                    <th>Mã phản hồi VnPay</th>
                    <td>@Model.VnPayResponseCode</td>
                </tr>
                <tr>
                    <th>Token giao dịch</th>
                    <td>@Model.Token</td>
                </tr>
            </table>
        </div>

        <!-- Hiển thị thông báo thành công hoặc thất bại -->
        @if (Model.Success)
        {
            <div class="alert alert-success">
                <strong>Thanh toán thành công!</strong>
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <strong>Thanh toán thất bại!</strong>
            </div>
        }

        <!-- Button quay lại trang thanh toán hoặc tiếp tục -->
        <a asp-action="Ban" asp-controller="Admin" class="btn btn-primary">Tiếp tục</a>
    </div>

</body>
</html>
